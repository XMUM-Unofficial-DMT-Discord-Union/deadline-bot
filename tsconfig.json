{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "module": "ES2022",
        "moduleResolution": "node",
        "target": "ESNext",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "build",
        "removeComments": true,
        "sourceMap": false
    },
    "exclude": [
        "./prisma/**",
        "node_modules",
        "build",
        ".vscode"
    ]
}